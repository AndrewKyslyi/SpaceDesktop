<SpaceDesktop>:
    MDBoxLayout:
        size: root.width, root.height
        orientation: "horizontal"
        size_hint: 1, 1

        MDBoxLayout:
            #size: root.width * 3 / 4, root.height
            orientation: 'vertical'
            size_hint: .25, 1

        MDBoxLayout:
            id: settings
            orientation: 'vertical'
            size_hint: .75, 1  # Установка размера второго вертикального BoxLayout

            canvas.before:
                Color:
                    rgba: [.5,.5,.5,.5]
                Rectangle:
                    size: settings.size
                    pos: (self.pos[0] + 5, self.pos[1] - 5)
                Rectangle:
                    size: settings.size
                    pos: (settings.pos[0], settings.pos[1])
                
            Widget:

            MDRectangleFlatButton:
                text: "Add host"
                size_hint: None, None
                size: self.parent.width / 8, 40  # Размер кнопки зависит от ширины родительского Layout
                pos_hint: {'center_x': 0.875, 'center_y': 0.05}
                theme_text_color: "Custom"
                text_color: "white"
                line_color: "red"
                on_release: app.btn_start_streaming()

<StreamingScreen>:
    md_bg_color: (0,0,0,0)
    streaming_screen: "streaming_screen"
    MDBoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        AsyncImage:
            id: streaming_img

    MDFloatLayout:
        MDFlatButton:
            line_color: (1,1,1,1)
            pos: self.pos
            size: 700, 150
            text: "killme"
            on_release: app.stop()

        MDFlatButton:
            line_color: (1,1,1,1)
            pos: 100, 10
            size: 700, 150
            text: "stop"
            on_release: app.btn_stop_streaming()            
